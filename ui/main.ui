<interface>
	<object class="GtkWindow" id="root_window">
		<child>
			<object class="GtkBox">
				<property name="orientation">horizontal</property>
				<child>
					<object class="GtkListBox"></object>
				</child>
				<child>
					<object class="GtkBox">
						<property name="orientation">vertical</property>
						<child>
							<object class="GtkButton" id="refresh_button">
								<property name="label">Refresh</property>
							</object>
						</child>

						<child>
							<object class="GtkButton" id="sync_button">
								<property name="label">Sync</property>
							</object>
						</child>
					</object>
				</child>
				<child>
					<object class="GtkListBox"></object>
				</child>
			</object>
		</child>
	</object>
</interface>
